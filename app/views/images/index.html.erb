<div class="content-wrapper">
  <h2 class="gallery-heading">作品例</h2>
  <div class="slider">
    <div class="slides">
      <% @images.each do |img| %>
        <% if img.image.attached? %>
         <div class="image-container">
            <%= image_tag img.image.variant(resize: '450x450'), class: 'slide-image' %>
            <div class="image-params-element">
              <div class="word-content"><%= img.word_chain.gsub(",", " ▷ ") %></div>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
    <button class="prev">❮</button>
    <button class="next">❯</button>
  </div>
</div>
