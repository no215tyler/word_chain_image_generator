<head>
  <style>
    .hover-pointer:hover {
      cursor: pointer;
    }
  </style>
</head>
<div class="flex justify-center flex-col items-center">
  <h1 class="my-5 text-xl p-3 rounded-md">ログイン情報入力</h1>

  <div class="flex flex-col text-center bg-white box-content rounded-md p-3 pb-6" style="width: 40%;">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.label :email, 'メールアドレス' %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", style: 'width: 100%;' %>
      </div>

      <div class="field">
        <%= f.label :password, 'パスワード' %><br />
        <%= f.password_field :password, autocomplete: "current-password", style: 'width: 100%;' %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, 'ログイン状態を保存する', class: 'text-xs md:text-sm' %>
        </div>
      <% end %>

      <div class="actions flex flex-col">
        <span class="inline-block rounded-lg bg-pink-500 px-8 py-3 text-center text-sm font-semibold text-white outline-none ring-indigo-300 transition duration-100 mt-3 hover:bg-pink-600 focus-visible:ring active:bg-pink-700 md:text-base"><%= f.submit "ログイン", class: 'hover-pointer' %></span>
      </div>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>
