<head>
  <style>
    .hover-pointer:hover {
      cursor: pointer;
    }
  </style>
</head>
<div class="flex justify-center flex-col items-center">
  <h1 class="my-5 text-xl p-3 rounded-md">ユーザー情報入力</h1>

  <div class="flex flex-col text-center bg-white rounded-md p-3 pb-6", style="width: 40%;">
    <%= form_with model: @user, url: user_registration_path, local: true do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :name, '名前' %><br />
        <%= f.text_field :name, autofocus: true, autocomplete: "name", style: 'width: 100%;' %>
      </div>

      <div class="field">
        <%= f.label :email, 'メール' %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", style: 'width: 100%;'  %>
      </div>

      <div class="field">
        <%= f.label :password, 'パスワード' %>
        <% if @minimum_password_length %>
        <span class="inline-block">( <%= @minimum_password_length %> 文字以上必須</span> )
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", style: 'width: 100%;'  %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation, 'パスワード確認' %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", style: 'width: 100%;'  %>
      </div>

      <div class="actions flex flex-col">
        <span class="inline-block rounded-lg bg-pink-500 px-8 py-3 text-center text-sm font-semibold text-white outline-none ring-indigo-300 transition duration-100 mt-3 hover:bg-pink-600 focus-visible:ring active:bg-pink-700 md:text-base"><%= f.submit "サインアップ", class: 'hover-pointer' %><span>
      </div>
    <% end %>
  <%= render "devise/shared/links" %>
  </div>

</div>
